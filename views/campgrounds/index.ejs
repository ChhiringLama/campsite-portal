        <div class="row section-one">
            <% for(let campground of campgrounds){%>
                <%if(campground.approved===true){%>
                <div class="col-md-4 col-sm-6 col-12">
                    <div class="card-type-a">
                        <div class="img-box">
                            <img src="<%=campground.images[0].url%>" alt="#">
                        </div>
                        <div class="card-contents">

                            <div class="details-box">
                                <h5>
                                    <%=campground.title%>
                                </h5>
                                <ul>
                                    <li><img src="/img/region-blue.png" alt="#"><span>
                                            <%=campground.location%>
                                        </span>
                                    </li>
                                    <li><img src="/img/difficulty.png" alt="#"><span>
                                            <%=campground.difficulty%>
                                        </span></li>
                                </ul>
                            </div>
                            <div class="lower-box">
                                <a class="user-btn btn-small btn btn-success"
                                    href="campgrounds/<%=campground._id%>">Explore</a>
                                <div class="price-box">
                                    <span>Expected Cost</span>
                                    <h6>Rs <%=campground.price%>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
                <%}%>

        </div>
        <div class="mb-4 mt-3">
            <a href="/campgrounds/new" class="btn btn-warning" style="margin: auto;
                display: block;
                width: 17%;">Add new</a>
        </div>

        <div class="section-header">
            <h2>Most Reviewed Campsites</h2>
            <span>Selected amongst the popular packages for you</span>
        </div>
        <div class="row section-two mb-4">
            <% for(let campground of mostReviewed) { %>
                <%if(campground.approved===true){%>
                <div class="col-md-3 col-sm-6 col-12  mb-3">
                    <a href="campgrounds/<%=campground._id%>">
                        <div class="card-type-c">
                            <div class="img-box">
                                <img src="<%=campground.images[0].url%>" alt="">
                            </div>
                            <h5>
                                <%=campground.title%>
                            </h5>
                            <div class="details">
                                <h6>Rs <span>
                                        <%=campground.price%>
                                    </span>/person</h6>
                                <ul>
                                    <li><img src="/img/region-blue.png" alt="#" srcset=""><span>
                                            <%=campground.location%>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </a>
                </div>

                <% } %>
                <% } %>
        </div>
        <div class="section-header">
            <h2>Recent Campsites</h2>
            <span>See whats recent</span>
        </div>
        <div class="row section-three">

            <% for(let campground of recentCampgrounds) { %>
                <%if(campground.approved===true){%>
                <div class="col-md-4  mb-3">
                    <div class="card-type-recent">
                        <img src="<%if(campground.images[0]){%><%=campground.images[0].url%><%}%>" alt="">
                        <div class="card-content">
                            <h3>
                                <%=campground.title%>
                            </h3>
                            <a href="/campgrounds/<%=campground._id%>" class="btn btn-info">
                                Find out more
                            </a>
                        </div>
                    </div>
                </div>
                <%}%>
                <%}%>
        </div>

    </div>